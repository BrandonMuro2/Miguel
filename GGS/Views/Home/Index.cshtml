

    @{
        ViewData["Title"] = "Home Page";
    }
<style>

    body {
        font-family: 'Sans-Serif', Arial, sans-serif !important;
    }

    .card-container .card {
        margin: 10px; /* Añade un margen alrededor de los cards */
        height: 200px; /* Ajusta esto para cambiar la altura */
    }

    .carousel-item .d-flex {
        justify-content: space-around; /* Espacia los cards uniformemente */
    }

    .card-hover-info {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.85);
        color: white;
        overflow: hidden;
        height: 0;
        transition: height 0.5s ease;
    }

    .card:hover .card-hover-info {
        height: 100%; /* Ajusta esto según el tamaño de la tarjeta */
        padding: 10px; /* Espacio para el texto */
    }

    .card-img-overlay {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card {
        position: relative;
        overflow: hidden;
    }

    /* Estilos para los botones de control */
    .carousel-control-prev, .carousel-control-next {
        width: 50px; /* Ajusta el ancho según tus botones */
        height: 500px; /* Ajusta la altura según tus botones */
    }

    .carousel-control-prev {
        left: -60px; /* Ajusta para mover los botones más a la izquierda del carrusel */
    }

    .carousel-control-next {
        right: -60px; /* Ajusta para mover los botones más a la derecha del carrusel */
    }

    /* Ajustes adicionales para posicionar correctamente los iconos dentro de los botones */
    .carousel-control-prev-icon, .carousel-control-next-icon {
        width: 100%;
        height: 100%;
        background-size: contain;
    }

    .card-img-top {
        height: 500px; /* Ajusta este valor según necesites */
        object-fit: cover; /* Mantiene las proporciones de la imagen */
    }

    .card-body .d-flex {
        width: 100%; /* Asegura que el contenedor flex ocupe todo el ancho disponible */
    }

    .card-title {
        margin-bottom: 0; /* Elimina el margen inferior para alinear correctamente con los íconos */
    }

    .fas, .fab {
        font-size: 1.25rem; /* Tamaño de los íconos */
    }


</style>



<div class="hero-image">
    <h1 class="mb-4 display-1">¡Organiza tu aventura, planifica tu juego!</h1>
    <div class="search-bar d-flex align-items-center">
        <input class="form-control form-control-lg" type="text" placeholder="Buscar juegos, noticias, más...">
        <button class="btn btn-primary btn-lg" type="submit">
            <i class="fas fa-search"></i>
        </button>
    </div>
</div>

<div class="container mt-5">
    <h2 class="mb-4">Los más jugados</h2>
    <div id="gameCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            <!-- Aquí se insertarán los elementos del carrusel -->
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#gameCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Anterior</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#gameCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Siguiente</span>
        </button>
    </div>
</div>

